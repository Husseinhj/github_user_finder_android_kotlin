<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="text_color">@color/white</item>
        <item name="secondary_text_color">@color/cultured</item>
        <item name="user_search_background">@color/eerie_black</item>
        <item name="user_search_cell_background">@color/black</item>
        <item name="user_search_touched_cell_background">@color/eerie_black</item>
        <item name="colorPrimary">@color/magenta</item>
        <item name="colorPrimaryVariant">@color/eerie_black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>